pipeline {
    agent any

    environment {
        // Docker Hub credentials ID in Jenkins
        DOCKERHUB_CRED = 'd2fed8f8-d4dc-4c79-9503-4b52ed3a4b47'  
        DOCKER_USER = 'dockerhub'
        USER_FRONTEND_IMAGE = 'user-frontend-app'
        FRONTEND_IMAGE = 'frontend-app'
        DOCKER_TAG = '1.0'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from Git...'
                git branch: 'main', url: 'https://github.com/Nighedhana09/docker-jenk.git'
            }
        }

        stage('Clean old containers') {
            steps {
                echo 'Stopping and removing old containers if they exist...'
                sh 'docker compose -f docker-compose.yaml down || true'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'Building Docker images using docker-compose...'
                sh 'docker compose -f docker-compose.yaml build'
            }
        }

        stage('Start Containers') {
            steps {
                echo 'Starting containers using docker-compose...'
                sh 'docker compose -f docker-compose.yaml up -d'
            }
        }

       /* stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube scan...'
                withCredentials([string(credentialsId: 'ccbf3ddd-0194-4c3d-8849-efe0bdf5d570', variable: 'SONAR_TOKEN')]) {
                    sh """
                        /opt/sonar-scanner/bin/sonar-scanner \
                        -Dsonar.projectKey=docker-jenk \
                        -Dsonar.sources=./ \
                        -Dsonar.host.url=http://3.83.140.128:9000 \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }*/

        stage('Push Docker Images to Docker Hub') {
            steps {
                echo 'Logging into Docker Hub and pushing custom images...'
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CRED}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin

                        # Push user-frontend-app
                        docker tag $USER_FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG

                        # Push frontend-app
                        docker tag $FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build, Sonar scan, and Docker push completed successfully.'
        }
        failure {
            echo '❌ Build failed. Please check logs.'
        }
    }
}
