pipeline {
    agent any

    environment {
        // Docker Hub credentials stored in Jenkins
        DOCKERHUB_CRED = 'dockerhub-creds'     
        DOCKER_USER = 'niggi123'
        DOCKER_TAG = '1.0'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Nighedhana09/docker-jenk.git'
            }
        }

        stage('Build Docker Images via Compose') {
            steps {
                sh """
                    echo "Building all Docker images using docker-compose..."
                    docker compose --env-file /dev/null build
                    echo "Docker images built successfully!"
                """
            }
        }

        stage('Push Docker Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CRED}",
                    usernameVariable: 'DOCKER_USER_VAR',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo "Logging in to Docker Hub..."
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER_VAR --password-stdin

                        echo "Tagging and pushing images..."

                        # Extract all services from docker-compose
                        SERVICES=\$(docker compose config --services)

                        for SERVICE in \$SERVICES; do
                            IMAGE_NAME=\$SERVICE
                            echo "Tagging and pushing \$IMAGE_NAME..."
                            docker tag \$IMAGE_NAME:latest \$DOCKER_USER_VAR/\$IMAGE_NAME:$DOCKER_TAG
                            docker push \$DOCKER_USER_VAR/\$IMAGE_NAME:$DOCKER_TAG
                        done

                        echo "All images pushed successfully!"
                    """
                }
            }
        }

        stage('Deploy Containers via Compose') {
            steps {
                sh """
                    echo "Stopping old containers (if any)..."
                    docker compose down --remove-orphans || true

                    echo "Starting containers..."
                    docker compose --env-file /dev/null up -d

                    echo "Deployment completed successfully!"
                """
            }
        }
    }

    post {
        success {
            echo '✅ Build, push, and deployment completed successfully.'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for details.'
        }
    }
}
