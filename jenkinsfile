pipeline {
    agent any

    environment {
        // Docker Hub credentials stored in Jenkins
        DOCKERHUB_CRED = 'dockerhub-creds'     
        DOCKER_USER = 'niggi123'
        BACKEND_IMAGE = 'backend-app'
        FRONTEND_IMAGE = 'frontend-app'
        USER_FRONTEND_IMAGE = 'user-frontend-app'
        DOCKER_TAG = '1.0'

        // EC2 deployment variables
        EC2_IP = '34.204.108.73'
        EC2_USER = 'ubuntu'
        DOCKER_COMPOSE_PATH = '/home/ubuntu/docker-compose.yaml'
        SSH_CRED_ID = 'ec2-ssh-key'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Nighedhana09/docker-jenk.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                sh """
                    docker build -t $BACKEND_IMAGE:$DOCKER_TAG ./backend
                    docker build -t $FRONTEND_IMAGE:$DOCKER_TAG ./frontend
                    docker build -t $USER_FRONTEND_IMAGE:$DOCKER_TAG ./user-portal-frontend
                """
            }
        }

        stage('Push Docker Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CRED}",
                    usernameVariable: 'DOCKER_USER_VAR',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER_VAR --password-stdin

                        docker tag $BACKEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$BACKEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$BACKEND_IMAGE:$DOCKER_TAG

                        docker tag $FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG

                        docker tag $USER_FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG
                    """
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: "${SSH_CRED_ID}",
                    keyFileVariable: 'SSH_KEY',
                    usernameVariable: 'SSH_USER'
                )]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY $SSH_USER@$EC2_IP '
                            echo "Stopping old containers..."
                            sudo docker compose -f $DOCKER_COMPOSE_PATH down || true

                            echo "Pulling latest images..."
                            sudo docker pull $DOCKER_USER/$BACKEND_IMAGE:$DOCKER_TAG
                            sudo docker pull $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                            sudo docker pull $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG

                            echo "Starting containers..."
                            sudo docker compose -f $DOCKER_COMPOSE_PATH up -d

                            echo "Deployment completed!"
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build, push, and EC2 deployment completed successfully.'
        }
        failure {
            echo '❌ Build or deployment failed. Please check logs.'
        }
    }
}
//Captstone-project
