pipeline {
    agent any

    environment {
        DOCKERHUB_CRED = 'dockerhub-creds'     // Jenkins credential ID
        USER_FRONTEND_IMAGE = 'user-frontend-app'
        FRONTEND_IMAGE = 'frontend-app'
        DOCKER_TAG = '1.0'

        EC2_IP = '54.163.51.114'
        EC2_USER = 'ubuntu'
        DOCKER_COMPOSE_PATH = '/home/ubuntu/docker-compose.yaml'
        SSH_CRED_ID = 'ec2-ssh-key'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Nighedhana09/docker-jenk.git'
            }
        }

        stage('Clean old containers') {
            steps {
                sh 'docker compose -f docker-compose.yaml down || true'
            }
        }

        stage('Build Docker Images') {
            steps {
                sh 'docker compose -f docker-compose.yaml build'
            }
        }

        stage('Start Containers') {
            steps {
                sh 'docker compose -f docker-compose.yaml up -d'
            }
        }

        stage('Push Docker Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CRED}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin

                        docker tag $USER_FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG

                        docker tag $FRONTEND_IMAGE:$DOCKER_TAG $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                        docker push $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                    """
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([sshUserPrivateKey(
                    credentialsId: "${SSH_CRED_ID}",
                    keyFileVariable: 'SSH_KEY',
                    usernameVariable: 'SSH_USER'
                )]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY $SSH_USER@$EC2_IP '
                            docker compose -f $DOCKER_COMPOSE_PATH down || true
                            docker pull $DOCKER_USER/$USER_FRONTEND_IMAGE:$DOCKER_TAG
                            docker pull $DOCKER_USER/$FRONTEND_IMAGE:$DOCKER_TAG
                            docker compose -f $DOCKER_COMPOSE_PATH up -d
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'SUCCESS: Build, push, and EC2 deployment completed.'
        }
        failure {
            echo 'FAILED: Please check logs.'
        }
    }
}
