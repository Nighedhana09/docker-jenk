pipeline {
    agent any

    environment {
        // Docker Hub credentials stored in Jenkins
        DOCKERHUB_CRED = 'dockerhub-creds'
        DOCKER_USER = 'niggi123'
        BACKEND_IMAGE = 'backend-app'
        FRONTEND_IMAGE = 'frontend-app'
        USER_FRONTEND_IMAGE = 'user-frontend-app'
        DOCKER_TAG = '1.0'
        NODE_ENV = 'docker'

        // EC2 details
        EC2_USER = 'ubuntu'
        EC2_HOST = '54.89.200.72'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Nighedhana09/docker-jenk.git'
            }
        }

        stage('Stop Existing Containers') {
            steps {
                sh """
echo "Stopping old containers (if any)..."
docker compose down --remove-orphans || true
                """
            }
        }

        stage('Build and Start Containers') {
            steps {
                sh """
echo "Building all images and starting containers with NODE_ENV=${NODE_ENV}..."
export NODE_ENV=${NODE_ENV}
docker compose build
docker compose up -d
docker ps -a
echo "‚úÖ All containers are up and running!"
                """
            }
        }

        stage('Push Custom Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CRED}",
                    usernameVariable: 'DOCKER_USER_VAR',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
echo "üîê Logging in to Docker Hub..."
echo \$DOCKER_PASS | docker login -u \$DOCKER_USER_VAR --password-stdin

echo "üì§ Tagging & pushing backend..."
docker tag ${BACKEND_IMAGE}:${DOCKER_TAG} \$DOCKER_USER_VAR/${BACKEND_IMAGE}:${DOCKER_TAG}
docker push \$DOCKER_USER_VAR/${BACKEND_IMAGE}:${DOCKER_TAG}

echo "üì§ Tagging & pushing frontend..."
docker tag ${FRONTEND_IMAGE}:${DOCKER_TAG} \$DOCKER_USER_VAR/${FRONTEND_IMAGE}:${DOCKER_TAG}
docker push \$DOCKER_USER_VAR/${FRONTEND_IMAGE}:${DOCKER_TAG}

echo "üì§ Tagging & pushing user frontend..."
docker tag ${USER_FRONTEND_IMAGE}:${DOCKER_TAG} \$DOCKER_USER_VAR/${USER_FRONTEND_IMAGE}:${DOCKER_TAG}
docker push \$DOCKER_USER_VAR/${USER_FRONTEND_IMAGE}:${DOCKER_TAG}

echo "‚úÖ Custom images pushed successfully!"
                    """
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(credentials: ['ec2-ssh-key']) {
                    sh """
ssh -tt -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} \
"echo 'Connected to EC2 successfully'; \
docker pull ${DOCKER_USER}/${BACKEND_IMAGE}:${DOCKER_TAG}; \
docker pull ${DOCKER_USER}/${FRONTEND_IMAGE}:${DOCKER_TAG}; \
docker pull ${DOCKER_USER}/${USER_FRONTEND_IMAGE}:${DOCKER_TAG}; \
docker compose down --remove-orphans || true; \
docker compose up -d; \
docker ps -a; \
echo 'Deployment completed successfully'"
                    """
                }
            }
        }

    } // end stages

    post {
        success {
            echo '‚úÖ Build, push, and deployment completed successfully.'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for details.'
        }
    }
}
